<?xml version="1.0"?>
<stax-application xmlns="http://www.stax.net/xml/application/1" default="prod">		
	<!-- Production environment settings -->		
	<environment name="prod">
		<appid>spsc</appid>
		<web>
			<context-root></context-root>
			<context-param>
				<param-name>application.environment</param-name>
				<param-value>prod</param-value>
			</context-param>
		</web>
	</environment>
	
	<!-- Development environment settings -->
	<environment name="dev">
		<appid>dev.spsc</appid>
		<web>
			<context-root></context-root>
			<context-param>
				<param-name>application.environment</param-name>
				<param-value>dev</param-value>
			</context-param>
		</web>
	</environment>
	
	<!-- Test environment settings -->
	<environment name="test">
		<appid>test.spsc</appid>
		<web>
			<context-root></context-root>
			<context-param>
				<param-name>application.environment</param-name>
				<param-value>test</param-value>
			</context-param>
		</web>
	</environment>
	
	<!-- Settings used when running the application locally -->
	<environment name="run">
		<web>
			<context-root></context-root>
			<web-uri>webapp</web-uri>
		</web>
	</environment>	
</stax-application>